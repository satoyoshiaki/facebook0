<%= form_with(model: @user, local: true) do |form| %>



    <div class="field">
    <%= form.label :gazou %>
    <%= image_tag(@user.gazou.url) if @user.gazou && @user.gazou.url %>
    <%= form.file_field :gazou %>
    <%= form.hidden_field :gazou_cache %>
    </div>


    <div class="blog_content">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <%= form.submit %>
  <% end %>

