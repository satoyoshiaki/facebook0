<%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>
        <div class="blog_image">
          <%= form.label :image %>
          <%= form.text_field :image %>
        </div>
        <div class="blog_content">
          <%= form.label :content %>
          <%= form.text_field :content %>
        </div>
        <%= form.submit %>
      <% end %>
      <%= link_to "ブログ一覧画面にもどる", blogs_path %>

      