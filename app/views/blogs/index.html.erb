<h1>投稿一覧</h1>
<table>
  <tr>
    <th>名前</th>
    <th>写真</th>
    <th>内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.user.name %></td>
    <td><%= image_tag blog.image.to_s %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細', blog_path(blog.id) %></td>
    <% if blog.user_id == current_user.id %>
    <td><%= link_to "編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to '削除する', blog_path(blog.id), method: :delete %></td>
  </tr>
    <% end %>
<% end %>
</table>

<p class="btn btn-primary btn-lg" id ="botann"><%= link_to '新しく投稿する', new_blog_path %></p>
